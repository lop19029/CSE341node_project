<a href="/" class="nav-link"><img src="/img/header/logo-white.png" alt="Page logo"></a>
<% if(isAuthenticated) { %>
<p class="fs20px fs-i-18px fs-m-16px fs-p-14px user-Name tac pl5px pr5px">Welcome <strong><%= name %></strong></p>
<% } %>
<nav>
    <ul>
        
        <i class="fas fa-arrow-right" id="close-btn"></i>
        <li><a href="/" class="<%= PagetoLoad === 'home' ? 'link-active' : '' %>">Home</a></li>
        <% if(!isAuthenticated) { %> 
        <li><a href="/auth/login" class="<%= PagetoLoad === 'auth/login' ? 'link-active' : '' %>">Login</a></li>
        <li><a href="/auth/signup" class="<%= PagetoLoad === 'auth/signup' ? 'link-active' : '' %>">Signup</a></li>
        <% } else { %>
        <form action="/auth/logout" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button id="logoutbtn" type="submit">Logout <i class="fas fa-power-off"></i></button>
        </form>     
        <% } %>
    </ul>
</nav>
<i class="fas fa-bars" id="menu-btn"></i>