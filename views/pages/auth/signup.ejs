<div class="login-page">
    <div class="login-box box-5 box-i-7 box-m-10 box-p-12">
        <h1>Signup</h1>
        <hr>
        <% if(errorMessage) { %>
            <p class="tbold fs20px lh2em tac error-message"><%= errorMessage%></p>
            <% } %>
        <form action="/signup" method="POST">
            <input class="<%= validationErrors.find(e => e.param === 'uName') ?  'invalid' : '' %>" type="text" required placeholder="Insert your Name" name="uName" value="<%= oldInput.uName %>">
            <input class="<%= validationErrors.find(e => e.param === 'mail') ?  'invalid' : '' %>" type="email" required placeholder="example@email.com" name="mail" value="<%= oldInput.mail %>">
            <input class="<%= validationErrors.find(e => e.param === 'password') ?  'invalid' : '' %>" type="password" required placeholder="password" name="password" value="<%= oldInput.password %>">
            <button>Signup</button>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
        <p class="form-options"><a href="#">Recover <i class="fas fa-key"></i></a> | <a href="<%= SocialLinks.Facebook %>">Signup <i class="fas fa-user-plus"></i></a></p>
    </div>
</div>