<div class="login-page">
    <div class="login-box box-5 box-i-7 box-m-10 box-p-12">
        <h1>Reset</h1>
        <hr>
        <% if(errorMessage) { %>
            <p class="tbold fs20px lh2em tac error-message"><%= errorMessage%></p>
            <% } %>
        <form action="/auth/reset" method="POST">
            <input class="<%= validationErrors.find(e => e.param === 'mail') ?  'invalid' : '' %>" type="email" name="mail" id="email" required placeholder="example@email.com" value="<%= oldInput.mail %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit">Reset</button>
        </form>
        <p class="form-options"><a href="/auth/login">Login <i class="fas fa-key"></i></a> | <a href="/auth/signup">Signup <i class="fas fa-user-plus"></i></a></p>
    </div>
</div>